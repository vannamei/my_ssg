{
  "compilerOptions": {
    // ルートパスを指定
    "baseUrl": "./",
    // 出力先ディレクトリ
    "outDir": "dist",
    // 出力するjsのバージョンを指定
    "target": "es5",
    // 出力するjsのモジュールシステムを指定
    "module": "ESnext",
    // モジュール解決方式を指定
    "moduleResolution": "node",
    // 使用する組み込みライブラリを指定
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // パスのエイリアスを解決
    "paths": {
      "@scss": ["src/scss"],
      "@scripts": ["src/scripts"],
      "@img": ["src/img"]
    },
    // JSXの解釈
    "jsx": "react",
    // ソースマップを利用
    "sourceMap": true,
    // 型定義ファイル'*.d.ts'を生成
    "declaration": true,
    "declarationMap": true,
    // 厳格なエラーチェックを有効にする
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // ESModulesのimport,export構文を利用
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // デコレーターを利用
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // JSのトランスパイル及び型チェックを利用
    "allowJs": true,
    "checkJs": true,
    // JSONモジュールを利用
    "resolveJsonModule": true,
    // ライブラリの型チェックを無視
    "skipLibCheck": true,
    // スプレッド演算子による配列内展開を利用
    "downlevelIteration": true
  },
  "include": ["src/scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
